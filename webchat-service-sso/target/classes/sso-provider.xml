<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	
	<!-- dubbo提供方配置timeout -->
	<dubbo:provider timeout="5000" />
	
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="sso-provider"  />

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="localhost:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20881" />

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service timeout="60000" interface="com.asiainfo.sso.service.UserService" ref="userService" />
	<dubbo:service interface="com.asiainfo.sso.service.RedisSessionService" ref="redisSessionService" />

	<!-- 和本地bean一样实现服务 -->
    <bean name="userService" class="com.asiainfo.sso.service.impl.UserServiceImpl" />
    <bean name="redisSessionService" class="com.asiainfo.sso.service.impl.RedisSessionServiceImpl" />
</beans>